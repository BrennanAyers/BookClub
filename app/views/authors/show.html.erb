<h2><%= @author.name %></h2>

<% @books.each do |book| %>
  <section id="book-<%= book.id %>-info">
    <img src="<%= book.image %>" alt="<%= book.title %>"/>
    <h5><%= book.title %></h5>
    <p>Pages: <%= book.pages %></p>
    <p>Published: <%= book.year %></p>
    <% if book.coauthors(@author).any? %>
      <p>Co-authors: <%= book.coauthors(@author).join(', ') %></p>
    <% end %>

  </section>
<% end %>
